# Configuración de la aplicación
NODE_ENV=production
PORT=3000

# Base de datos PostgreSQL (Supabase)
DATABASE_HOST=aws-1-us-east-2.pooler.supabase.com
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres.xovayflzewnveizvhnua
DATABASE_PASSWORD=your-database-password
DATABASE_POOL_MODE=session

# URL de conexión para Prisma
DATABASE_URL="postgresql://postgres.xovayflzewnveizvhnua:your-database-password@aws-1-us-east-2.pooler.supabase.com:5432/postgres?schema=public&pgbouncer=true&connection_limit=1"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de CORS
CORS_ORIGIN=*

# Configuración de Swagger
SWAGGER_ENABLED=true

# Configuración de logs
LOG_LEVEL=info

# Configuración de rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Configuración de WebSocket
WEBSOCKET_PORT=3001

# Configuración de trading
DEFAULT_BALANCE=10000
MIN_ORDER_AMOUNT=0.01
MAX_ORDER_AMOUNT=1000000

# Configuración de mercado
MARKET_DATA_UPDATE_INTERVAL=1000
CANDLESTICK_INTERVAL=60000

# Configuración de Keep-Alive de Base de Datos
KEEPALIVE_ENABLED=true
KEEPALIVE_INTERVAL_MINUTES=30
KEEPALIVE_DAILY_HOUR=2
KEEPALIVE_BUSINESS_HOURS=true
